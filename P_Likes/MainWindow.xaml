<Window x:Class="P_Likes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_Likes"
        mc:Ignorable="d"
        Title="MainWindow" Height="203" Width="259">
    <Grid Margin="0,0,2,0">
        <Label x:Name="VkIdLabel" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LikeButton" Content="Запустить лайкомет!!" HorizontalAlignment="Left" Height="37" Margin="10,119,0,0" VerticalAlignment="Top" Width="130" Click="LikeButton_Click"/>
        <Label Content="Количество последних постов на П:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="19" Margin="10,95,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="PostsNumberBox" HorizontalAlignment="Left" Height="23" Margin="10,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
